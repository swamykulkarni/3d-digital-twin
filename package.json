{
  "name": "panel-status-viewer",
  "version": "1.0.0",
  "description": "3D Panel Status Visualization System",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run install:deps && cd frontend && npm run build",
    "start": "NODE_ENV=production npm run start:production",
    "start:production": "cd backend && NODE_ENV=production npm start",
    "install:deps": "cd backend && npm install && cd ../frontend && npm install",
    "postinstall": "npm run install:deps",
    "test": "cd frontend && npm test && cd ../backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}